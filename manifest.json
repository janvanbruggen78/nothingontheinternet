{
  "manifest_version": 3,
  "name": "Nothing on the Internet",
  "version": "1.7.8",
  "description": "Remove all visible content from the web with a single click. Click again and everything is restored, just as it was.",
  "permissions": ["storage", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    },
    "default_title": "Nothing on the Internet.."
  }
}